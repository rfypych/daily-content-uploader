# Database Configuration (MySQL for Production)
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/daily_content
# For development (SQLite)
# DATABASE_URL=sqlite:///./daily_content.db

# MySQL Database Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=daily_content
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false
ENVIRONMENT=production

# Instagram Credentials (Optional - for API integration)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# TikTok Credentials (Optional - for API integration)
TIKTOK_USERNAME=
TIKTOK_PASSWORD=

# Browser Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Scheduler Settings
TIMEZONE=Asia/Jakarta
DEFAULT_UPLOAD_TIME=09:00

# File Upload Settings
MAX_FILE_SIZE=100MB
UPLOAD_FOLDER=/var/www/html/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mov,avi

# Security Settings
CORS_ORIGINS=https://yourdomain.com
RATE_LIMIT_PER_MINUTE=60
